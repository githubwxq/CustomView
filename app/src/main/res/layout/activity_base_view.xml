<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.administrator.customview.baseViewActivity">
<com.example.administrator.customview.View.BaseView
    android:id="@+id/aa"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    />

    <com.example.administrator.customview.View.PieView
        android:id="@+id/pv"
        android:layout_below="@+id/aa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        />


    <com.example.administrator.customview.View.CanvasBaseView
        android:layout_toRightOf="@+id/pv"
        android:layout_below="@+id/aa"
        android:layout_width="300dp"
        android:layout_height="300dp"
        />









</RelativeLayout>
